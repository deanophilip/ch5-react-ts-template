{
  "name": "ch5-react-ts-template",
  "private": true,
  "version": "4.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:dev": "tsc && vite build --mode development",
    "build:prod": "tsc && vite build --mode production",
    "archive": "ch5-cli archive -p ch5-react-ts-template -d dist -o archive -c ./contracts/output/HPE_StandardContract1/interface/mapping/HPE_StandardContract1.cse2j",
    "deploy:mobile": "ch5-cli deploy -p -H 0.0.0.0 -t mobile archive/ch5-react-ts-template.ch5z",
    "deploy:xpanel": "ch5-cli deploy -p -H 0.0.0.0 -t web archive/ch5-react-ts-template.ch5z",
    "deploy:panel": "ch5-cli deploy -p -H 0.0.0.0 -t touchscreen archive/ch5-react-ts-template.ch5z --slow-mode",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@crestron/ch5-crcomlib": "^2.11.2",
    "@crestron/ch5-theme": "^2.11.2",
    "@crestron/ch5-webxpanel": "^2.8.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react-redux": "^7.1.34",
    "@types/react-router-dom": "^5.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.7.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@crestron/ch5-shell-utilities-cli": "^2.11.2",
    "@crestron/ch5-utilities-cli": "^2.0.0",
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eruda": "^3.4.1",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-singlefile": "^2.1.0",
    "vite-plugin-static-copy": "^2.2.0"
  }
}
